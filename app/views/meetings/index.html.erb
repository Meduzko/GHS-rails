<p id="notice"><%= notice %></p>

<h1>Meetings</h1>

<table>
  <thead>
    <tr>
      <th>Announcement</th>
      <th>Agenda</th>
      <th>Consideration docs</th>
      <th>Solutions</th>
      <th>Accepted solutions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
        <td><%= meeting.announcement %></td>
        <td><%= meeting.agenda %></td>
        <td><%= meeting.consideration_docs %></td>
        <td><%= meeting.solutions %></td>
        <td><%= meeting.accepted_solutions %></td>
        <td><%= link_to 'Show', meeting %></td>
        <td><%= link_to 'Edit', edit_meeting_path(meeting) %></td>
        <td><%= link_to 'Destroy', meeting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

