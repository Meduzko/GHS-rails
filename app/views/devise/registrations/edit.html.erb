<div class="edit-profile">
  <div class="uk-container">
  <h2> <%= resource_name.to_s.humanize %></h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <fieldset class="uk-fieldset">

      <legend class="uk-legend">Профіль</legend>

      <%= devise_error_messages! %>

        <div class="uk-margin">
          <%= f.email_field :email, :placeholder => 'Email', autofocus: true, class: "uk-input", :required => true %>
        </div>


      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

        <div class="uk-margin">
          <i>Нинішній пароль</i><br />
          <%= f.password_field :current_password, autocomplete: "off", class: "uk-input" %>
        </div>
      

        <div class="uk-margin">
          <i>Новий пароль</i><br />
          <%= f.password_field :password, autocomplete: "off", class: "uk-input" %>
        </div>

        <div class="uk-margin">
        <i>Підтвердіть пароль</i><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "uk-input" %>
        </div>
        <div class="uk-margin">
         <%= f.text_field :approved %>
         </div>

        <!--<div class="form-group">
          <%#= f.label :avatar, class: 'col-sm-2 control-label'  %>
          <div class="col-sm-6">
              <%#= f.file_field :avatar %>
          </div>
        </div>
    -->
         <div class="uk-margin" uk-margin>
          <div uk-form-custom="target: true">
          <i>Фото</i><br />
          <%= f.file_field :avatar %>
            <!--  <input type="file"> -->
              <input class="uk-input uk-form-width-medium" type="text" placeholder="Select file" disabled>
          </div>
         <!-- <button class="uk-button uk-button-default">Submit</button> -->
        </div>


      <div class="actions">
        <%= f.submit "Оновити", class: "uk-button uk-button-primary" %>
      </div>


    
      </fieldset>
    <% end %>
      <div class="edit-profile-bottom">
      <h3>Видалити профіль</h3>

      <p> <%= button_to "Видалити", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "uk-button uk-button-danger" %></p>
      <%= link_to "Назад", :back, class: "btn btn-default" %>
       </div>
       
 

  </div>
</div>