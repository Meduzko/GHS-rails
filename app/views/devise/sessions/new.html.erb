<%= flash_messages %>
<div class="login-chapter">
    <div class="uk-container">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <fieldset class="uk-fieldset uk-position-center">

              <legend class="uk-legend">Увійти</legend>

              <div class="uk-margin">
                  <%= f.email_field :email, :placeholder => 'Email', autofocus: true, class: "uk-input", :required => true %>
              </div>

              <div class="uk-margin">
                  <%= f.password_field :password, :placeholder => 'Password', autocomplete: "off", class: "uk-input", :required => true %>
              </div>

              <div class="uk-margin">
                <% if devise_mapping.rememberable? -%>
                <div>
                  <label><%= f.check_box :remember_me,  class: "uk-checkbox", type: "checkbox" %> Remember me</label>
                </div>   
                  <!--
                  <div class="field pull-left">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                  -->
                <% end -%>
                <%= render "devise/shared/links" %>
              </div>
            <%= f.submit "Log in", class: "uk-button uk-button-primary" %>
          </fieldset>
        <% end %>
    <div>
</div>